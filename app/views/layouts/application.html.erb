<!DOCTYPE html>
<html>
  <head>

    <title>gCamp</title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Jumbotron Template for Bootstrap</title>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h3 style="color: white"><%= link_to("gCamp", root_path) %></h3>
        </div>

        <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="<%= 'active' if current_page?(current_user)%>">
          <%= link_to(current_user.email, current_user) %></li>
          <li><%= link_to("Sign Out", logout_path, method: :delete) %></li>
        <% else %>
          <li class="<%= 'active' if (current_page?(signup_path)) || (@signup_error) %>"
          ><a href="\signup">Sign Up</a></li>
          <li class="<%= 'active' if (current_page?(login_path)) || (@login_error)%>"
          ><a href="\login">Sign In</a></li>
        <% end %>

      </ul>
      </div>
    </div>
    <br></br>

    <% if @index_page %>
      <div class="main_page">
    <% else %>
      <div class="container">
    <% end %>
      <br>
      <% if notice != nil %>
        <p id="notice", class="alert alert-success"><%= notice %></p>
      <%end%>
    <%= yield %>
      <div class="container">
        <footer style="text-align-left">
          <p>
            <%= link_to_unless_current("About", about_path) %> |
             <%= link_to_unless_current("Terms", terms_path) %> |
             <%= link_to_unless_current("FAQ", faq_path) %> |
             <%= link_to_unless_current("Users", users_path) %> |
             <%= link_to_unless_current("Projects", projects_path) %>
             </p>
          <div class="col-md-2 col-md-offset-10">
            <%= link_to "https://linkedin.com/in/hostetjm/" do %>
              <%= image_tag("LinkedIn.png", width: "20em") %>
            <% end %>
            <%= link_to "https://github.com/Jeff-Hostetler" do %>
              <%= image_tag("GitHub.png", width: "20em") %>
            <% end %>
            <%= link_to "https://twitter.com/DreamsDontNeedU" do %>
              <%= image_tag("Twitter.png", width: "20em") %>
            <% end %>
            <%= link_to "http://www.galvanize.it/school" do %>
              <%= image_tag("galvanize.jpeg", width: "70em") %>
            <% end %>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>
