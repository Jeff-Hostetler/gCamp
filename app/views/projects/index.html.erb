<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Create Project', new_project_path, class:"btn btn-info btn-large" %>
  </div>
  <h1>Projects</h1>
</div>

<table class="table">
  <thead>
    <th>
      Name
    </th>
    <th>
      Members
    </th>
    <th>
      Tasks
    </th>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to(project.name, project_path(project)) %>
        </td>
        <td>
          <%= link_to project.memberships.count, project_memberships_path(project) %>
        </td>
        <td>
          <%= link_to project.tasks.count, project_tasks_path(project) %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>

<hr>

<div class="page-header">
  <h1>Pivotal Tracker Projects</h1>
</div>

<table class="table">
  <thead>
    <th>
      Name
    </th>
  </thead>
  <tbody>
    <% unless @pivotal_projects == nil %>
    <% @pivotal_projects.each do |project|%>
    <tr>
      <td>
        <%= link_to project[:name], tracker_project_path(project[:id]) %>
      </td>
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>
<hr>
