<div class="page-header">

  <h1>Projects
  <%= link_to 'Create Project', new_project_path, class:"btn btn-info btn-large pull-right" %></h1>
</div>

<table class="table">
  <thead>
    <th class="col-sm-3">
      Name
    </th class="col-sm-6">
    <th>
      Members
    </th>
    <th>
      Tasks
    </th>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to(project.name, project_path(project)) %>
        </td>
        <td>
          <%= link_to project.memberships.count, project_memberships_path(project) %>
        </td>
        <td>
          <%= link_to project.tasks.count, project_tasks_path(project) %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<hr>
