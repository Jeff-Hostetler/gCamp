
<br></br>
  <div class="col-sm-12">
    <div class="col-md-offset-4 col-md-4">
      <div class="well">
        <h3>Sign into gCamp</h3>
      <%= form_for(:session, url: login_path) do |f| %>
      <% if @login_error %>
        <div style="color:red">
          <%= @login_error %>
        </div>
      <% end %>


      <br>

      <div>
        <%= f.label :email %>
      </div>
      <div>
        <%= f.email_field :email, class:"form-control, col-sm-12" %>
      </div>

      <div>
        <%= f.label :password %>
      </div>
      <div>
        <%= f.password_field :password, class:"form-control, col-sm-12"  %>
      </div>
      <br></br>

      <div>
        <%= f.submit "Sign In" %>
      </div>
    </div>
  </div>
  </div>

<% end %>
