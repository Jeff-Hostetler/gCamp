<% current_user_array = [] %>
<% current_user.memberships.each do |membership| %>
<% current_user_array.push(membership.project_id) %>
<% end %>
<% current_user_array %>
<div class="page-header">
  <div class= "pull-right">
    <%= link_to 'Create User', new_user_path, class:"btn btn-info btn-large" %>
  </div>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>

      </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%user.memberships.each do |membership| %>
      <% @user_array = membership.id%>
      <% end %>
      <% user_array = [] %>
      <% user.memberships.each do |membership| %>
        <% user_array.push(membership.project_id) %>
      <% end %>
      <% user_array %>
      <tr>
        <td>
          <%= link_to "#{user.first_name} #{user.last_name}", user_path(user)%>
        </td>
        <td class="col-sm-10">
          <% if (current_user.admin == true) || !(current_user_array & user_array).empty? %>
          <%= mail_to(user.email)%>
          <% end %>
        </td>
        <td>
          <%= link_to("Edit", edit_user_path(user)) %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<hr>
