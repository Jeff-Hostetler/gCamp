<div class="page-header">
  <div class="pull-right">
    (showing first 500)
  </div>
  <h1>Projects for <%= @pivotal_project[:name]  %><%= @pivotal_stories.count %></h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <th>
      Name
    </th>
    <th>
      Estimate
    </th>
    <th>
      Labels
    </th>
    <th>
      Current State
    </th>
  </thead>
  <tbody>
    <% @pivotal_stories.each do |story| %>
    <tr>
      <td class="col-sm-6">
        <%= link_to story[:name], story[:url]%>
      </td>
      <td>
        <%= story[:estimate] %>
      </td>
      <td>
        <% unless story[:labels][0] == nil %>
        <%= story[:labels][0].values[3] %>, <%= story[:labels][0].values[2] %>
        <% end %>
      </td>
      <td>
        <%= story[:current_state] %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

<hr>
