<div class="page-header">
  <div class="pull-right">
      <p>
        (showing first 500)
      </p>
  </div>
  <h1>Projects for <%= @pivotal_project[:name]  %></h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <th class="active">
      Story
    </th>
    <th class="active">
      Estimate
    </th>
    <th class="active">
      Labels
    </th>
    <th class="active">
      Current State
    </th>
  </thead>
  <tbody>
    <% @pivotal_stories.reverse.each do |story| %>
    <tr>
      <td class="col-sm-6">
        <%= link_to story[:name], story[:url]%>
      </td>
      <td>
        <%= story[:estimate] %>
      </td>
      <td>
        <% unless story[:labels][0] == nil %>
        <%= "#{story[:labels][0].values[3]}#{", " if story[:labels][1] != nil}#{story[:labels][1].values[3]if story[:labels][1] != nil}" %>
        <% end %>
      </td>
      <td>
        <%= story[:current_state] %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

<hr>
