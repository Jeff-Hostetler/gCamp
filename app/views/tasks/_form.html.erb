<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
      <div class="col-sm-offset-1 col-sm-12">
        <div class='col-sm-6'>
          <div class="alert alert-danger">

          <h5><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h5>
          <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
      <% end %>
        </div>
      </div>
    </div>
      </ul>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :description, class:" col-sm-1 "%>
        <div class="col-sm-3">
          <%= f.text_field :description, class:"form-control"%>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :due, class:"col-sm-1" %>
        <div class="col-sm-2">
          <%= f.date_field :due, class:"form-control" %>
        </div>
      </div>
    </div>

    <% if (params.has_key?(:id)) %>
      <div class="col-sm-offset-1 col-sm-11">
        <div class="checkbox">
          <label>
            <%= f.check_box :complete %> Complete
          </label>
        </div>
      </div>
    <%end%>

    <div class="form-group">
      <div class="col-sm-offset-1">
        <%= f.submit class:"btn btn-primary" %>
      </div>
    </div>
  </div>


<% end %>
