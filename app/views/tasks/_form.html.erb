<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<form class="form-horizontal" role="form">
  <div class="form-group">
    <%= f.label :description, class:"col-sm-1 control-label"%>
    <div class="col-sm-11">
      <%= f.text_field :description, class:"form-control, col-sm-3", type:"text"%>
    </div>
  </div>
  <br></br>

  <div class="form-group">
    <label for="due" class="col-sm-1 control-label">Due Date</label>
    <div class="col-sm-11">
      <%= f.date_field :due, type:"date", class:"col-sm-2" %>
    </div>
  </div>

  <% if (params.has_key?(:id)) %>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <div class="checkbox">
        <label>
          <%= f.check_box :complete %> Complete
        </label>
      </div>
    </div>
  </div>
  <%end%>

  <br></br>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
</form>


<% end %>
