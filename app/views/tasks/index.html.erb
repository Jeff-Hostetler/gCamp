<h1>Listing Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to 'New Task', new_task_path, class:"btn btn-info btn-large" %>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description%></td>
        <td><%= link_to 'Show ', task, class:"btn btn-success" %> </td>
        <td><%= link_to 'Edit ', edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy ', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
