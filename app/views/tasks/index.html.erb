<div class="page-header">
  <h1>Tasks<%= link_to 'Create Task', new_task_path, class:"btn btn-info btn-large, pull-right" %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
    </tr>
  </thead>


  <tbody>

    <% @tasks.each do |task| %>
    <% require 'date' %>
    <% current_date = Date.today %>
      <%if task.due == nil %>
        <tr>
          <td><%= task.description%></td>
          <td><%= task.complete%></td>
          <td>Blank</td>
          <td><%= link_to 'Show ', task, class:"btn btn-success btn-large, col-md-offset-12" %> </td>
          <td><%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large, col-md-offset-12" %></td>
          <td><%= link_to 'Destroy ', task, class:"btn btn-danger btn-large, col-md-offset-8", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%elsif (task.due - current_date).to_i < 7 %>
        <tr class="danger">
          <td><%= task.description%></td>
          <td><%= task.complete%></td>
          <td><%= task.due%></td>
          <td><%= link_to 'Show ', task, class:"btn btn-success btn-large, col-md-offset-12" %> </td>
          <td><%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large, col-md-offset-12" %></td>
          <td><%= link_to 'Destroy ', task, class:"btn btn-danger btn-large, col-md-offset-8", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%else%>
        <tr>
          <td><%= task.description%></td>
          <td><%= task.complete%></td>
          <td><%= task.due%></td>
          <td><%= link_to 'Show ', task, class:"btn btn-success btn-large, col-md-offset-12" %> </td>
          <td><%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large, col-md-offset-12" %></td>
          <td><%= link_to 'Destroy ', task, class:"btn btn-danger btn-large, col-md-offset-8", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<hr></hr>

