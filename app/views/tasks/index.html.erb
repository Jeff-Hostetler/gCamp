<h1>Tasks<%= link_to 'New Task', new_task_path, class:"btn btn-info btn-large, col-md-offset-8" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description%></td>
        <td><%= link_to 'Show ', task, class:"btn btn-success btn-large, col-md-offset-6" %> </td>
        <td><%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large, col-md-offset-4" %></td>
        <td><%= link_to 'Destroy ', task, class:"btn btn-danger btn-large, col-md-offset-2", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
