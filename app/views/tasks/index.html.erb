<div class="page-header">

  <h1>Tasks<%= link_to 'Create Task', new_task_path, class:"btn btn-info btn-large, pull-right" %></h1>
  <p class="pull-right">
    <%= link_to_unless_current("All", tasks_path(type: "all")) %> |
    <%= link_to_unless_current("Incomplete", tasks_path(type: "incomplete")) %>
  </p>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
    </tr>
  </thead>


  <tbody>

    <% @tasks.each do |task| %>
    <% require 'date' %>
    <% current_date = Date.today %>
      <%if task.due == nil %>
        <tr>
          <td><%= task.description%></td>
          <td><%= task.complete%></td>
          <td>Blank</td>
          <td>
            <div class="pull-right" >
              <%= link_to 'Show ', task, class:"btn btn-success btn-large" %>
              <%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large" %>
              <%= link_to 'Destroy ', task, class:"btn btn-danger btn-large", method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </td>
        </tr>
      <%elsif (task.due - current_date).to_i < 7 %>
        <tr class="danger">
          <td><%= task.description%></td>
          <td><%= task.complete%></td>
          <td><%= task.due%></td>
          <td>
            <div class="pull-right">
              <%= link_to 'Show ', task, class:"btn btn-success btn-large" %>
              <%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large" %>
              <%= link_to 'Destroy ', task, class:"btn btn-danger btn-large", method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <%else%>
        <tr>
          <td><%= task.description %></td>
          <td><%= task.complete %></td>
          <td><%= task.due %></td>
          <td>
            <div class="pull-right">
              <%= link_to 'Show ', task, class:"btn btn-success btn-large" %>
              <%= link_to 'Edit ', edit_task_path(task), class:"btn btn-info btn-large" %>
              <%= link_to 'Destroy ', task, class:"btn btn-danger btn-large", method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<hr></hr>

<br>
