<div class="page-header">
  <h1><%= @task.description %>
    <%= link_to 'Edit', edit_project_task_path(@project, @task),
        class:"btn btn-info btn-large pull-right" %>
  </h1>

</div>
<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li><%= link_to @project.name, @project %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li class="active">Show</li>
</ol>
<p>
  <strong>Due:</strong>
  <%= @task.due %>
</p>
<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>

<table>
  <thead>
    <th>
      <h3>Comments</h3>
    </th>
  </thead>
  <tbody>
    <% @task.comments.each do |comment| %>
      <tr>
        <td class="col-md-3">
          <%= link_to comment.user.full_name, user_path(comment.user) %>
        </td>
        <td class="col-md-9">
          <%= comment.description %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% comment = Comment.new %>
<%= form_for [@project, @task, comment] do |f| %>

  <div class="col-md-offset-3">
    <div class="col-md-12">
      <div class="form-group">
        <div class="col-md-9">

          <%= f.text_field :description, size: 1000, class:"form-control" %>
        </div>
      </div>
    </div>
    <br><br>
    <div class="col-md-12">
      <div class= "form-group">
          <%= f.submit class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
